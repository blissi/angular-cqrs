{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@angular/core": ["node_modules/@angular/core"]
    },
    "noImplicitAny": true,
    "strictNullChecks": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "types": [
      "mocha",
      "chai",
      "sinon"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
